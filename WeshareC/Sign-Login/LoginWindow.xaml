<Window x:Class="WeshareC.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeshareC"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username" />
            <TextBox x:Name="txtUsername" Width="200" Margin="0 5" />
            <TextBlock Text="Password" />
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0 5" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Login" Width="100" Click="LoginButton_Click" Margin="5" />
                <Button Content="Go Back" Width="100" Click="GoBack_Click" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
