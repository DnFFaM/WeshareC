<Window x:Class="WeshareC.InsideAppWindows.UserChoise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeshareC.InsideAppWindows"
        mc:Ignorable="d"
        Title="UserChoise" Height="500" Width="900">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Create Group And Add to The Group" Width="300" Height="50" Margin="10" Click="CreateGroup_Click" />
            <Button Content="Add Purchase to Group" Width="300" Height="50" Margin="10" Click="AddPurchase_Click" />
            <Button Content="Group Calculate" Width="300" Height="50" Margin="10" Click="OtherFunction_Click" />

            <Button Content="Logout" Width="300" Height="50" Margin="10" Click="Logout_Click" />
        </StackPanel>
    </Grid>
</Window>
