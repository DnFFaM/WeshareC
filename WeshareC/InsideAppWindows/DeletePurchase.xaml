<Window x:Class="WeshareC.InsideAppWindows.DeletePurchase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeshareC.InsideAppWindows"
        mc:Ignorable="d"
        Title="DeletePurchase" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Select Group:" />
            <ComboBox x:Name="cmbGroups" Width="350" Margin="0 5" SelectionChanged="CmbGroups_SelectionChanged" />

            <TextBlock Text="Select Purchase:" />
            <ComboBox x:Name="cmbPurchases" Width="350" Margin="0 5" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Delete Selected Purchases" Width="200" Click="BtnDeletePurchases_Click" Margin="5" />
                <Button Content="Go Back" Width="200" Click="GoBack_Click" Margin="5" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>